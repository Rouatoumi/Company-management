{% extends 'layouts/master.html.twig' %}

{% block title %}
	Les utilisateurs
{% endblock %}

{% block content %}
	<h1>Les coordonn√©es d'utilisateur </h1>

	<table class="table table-stripped table-hover">
		<thead>
			<tr>
				<th>Id</th>
				<th>Email</th>
				{#}<th>Password</th> {#}
				<th>Nom</th>
				<th>Prenom</th>
				<th>Num_telephone</th>
				<th>service</th>

				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.id }}</td>
					<td>{{ user.email }}</td>
					{#}	<td>{{ user.password }}</td> {#}
					<td>{{ user.nom }}</td>
					<td>{{ user.prenom }}</td>
					<td>{{ user.numTelephone }}</td>
					<td>{{ user.service }}</td>
					<td>
						<button class="btn btn-outline-primary" type="submit">
							<a href="{{ path('user_show', {'id': user.id}) }}">show</a>
						</button>


						<button class="btn btn-outline-primary" type="submit">
							<a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

						</button>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="8">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<button class="btn btn-outline-primary" type="submit">
		<a href="{{ path('user_new') }}">Create new</a>
	</button>
{% endblock %}
