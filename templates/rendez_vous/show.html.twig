{% extends 'layouts/master.html.twig' %}

{% block title %}Affichage RendezVous
{% endblock %}

{% block content %}
	<h1>RendezVous</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ rendez_vou.id }}</td>
			</tr>
			<tr>
				<th>Date</th>
				<td>{{ rendez_vou.date ? rendez_vou.date|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Titre</th>
				<td>{{ rendez_vou.titre }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ rendez_vou.description }}</td>
			</tr>
		</tbody>
		<tfooter>
			<tr>
				<td>
					<button class="btn btn-info" type="submit">
						<a href="{{ path('rendez_vous_index') }}" class="text-white">back to list</a>

					</button>
				</td>
			</tr>
			{% if is_granted('ROLE_ADMIN') %}

				<tr>
					<td>
						<button class="btn btn-success" type="submit">
							<a href="{{ path('rendez_vous_edit', {'id': rendez_vou.id}) }}" class="text-white">edit</a>

						</button>
					</td>
				</tr>
			{% endif %}

		</tfooter>
	</table>
	{% if is_granted('ROLE_ADMIN') %}


		{{ include('rendez_vous/_delete_form.html.twig') }}
	{% endif %}

{% endblock %}
