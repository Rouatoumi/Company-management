{% extends 'layouts/master.html.twig' %}

{% block title %}Projet
{% endblock %}

{% block content %}
	<h1>Projet</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ projet.id }}</td>
			</tr>
			<tr>
				<th>Date_debut</th>
				<td>{{ projet.dateDebut ? projet.dateDebut|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Deadline</th>
				<td>{{ projet.deadline ? projet.deadline|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Responsable</th>
				<td>{{ projet.responsable }}</td>
			</tr>
			<tr>
				<th>Equipe</th>
				<td>{{ projet.equipe }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('projet_index') }}">back to list</a>

	<a href="{{ path('projet_edit', {'id': projet.id}) }}">edit</a>

	{{ include('projet/_delete_form.html.twig') }}
{% endblock %}
