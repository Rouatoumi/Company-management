{% extends 'layouts/master.html.twig' %}

{% block title %}Projet
{% endblock %}

{% block content %}
	<h1>Projet</h1>

	<table class="table ">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ projet.id }}</td>
			</tr>
			<tr>
				<th>Date_debut</th>
				<td>{{ projet.dateDebut ? projet.dateDebut|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Deadline</th>
				<td>{{ projet.deadline ? projet.deadline|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Responsable</th>
				<td>{{ projet.responsable }}</td>
			</tr>
			<tr>
				<th>Equipe</th>
				<td>{{ projet.equipe }}</td>
			</tr>
			<tr>
				<th>technologie</th>
				<td>{{ projet.technologie.nom  }}</td>
			</tr>
		</tbody>
		<tfooter>
			<tr>
				<td>
					<button class="btn btn-info" type="submit">
						<a href="{{ path('projet_index') }}" class="text-white">back to list</a>

					</button>
				</td>
			</tr>
			<tr>
				{% if is_granted('ROLE_ADMIN') %}

					<td>
						<button class="btn btn-success" type="submit">
							<a href="{{ path('projet_edit', {'id': projet.id}) }}" class="text-white">edit</a>

						</button>
					</td>
				</tr>
			{% endif %}


		</tfooter>

	</table>

	{% if is_granted('ROLE_ADMIN') %}

		{{ include('projet/_delete_form.html.twig') }}
	{% endif %}

{% endblock %}
